blueman-applet &

# screenshot tool
flameshot &

# lock screen timeout
xautolock -time 10 -locker blurlock &

# launch polybar
polybar -c /home/geoff/.config/polybar/config "main" &

# launch application dock
plank &

ff-theme-util &
fix_xcursor

