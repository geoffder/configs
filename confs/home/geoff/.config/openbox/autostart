# Programs that will run after Openbox has started.

# Set wallpaper
nitrogen --restore & sleep 1 &

# Run composite manager
picom -b &

/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
nm-applet &

# battery / power management
xfce4-power-manager &

# system updates
pamac-tray &

# clipboard manager
clipit &

