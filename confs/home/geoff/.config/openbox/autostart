# Programs that will run after Openbox has started.

# volume adjustment
volumeicon &

# Set wallpaper
nitrogen --restore & sleep 1 &

# Run composite manager
picom -b &

/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# network manager
nm-applet &

# battery / power management
xfce4-power-manager &

# clipboard manager
clipit &

# bluetooth
blueman-applet &

# screenshot tool
flameshot &

# lock screen timeout
xautolock -time 10 -locker blurlock &

# launch polybar
polybar -c /home/geoff/.config/polybar/config "main" & sleep 5 &

# launch application dock
plank &

fix_xcursor

