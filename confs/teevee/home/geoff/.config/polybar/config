[colors]
;background = #99222222
background = #ee222222
background-alt = #99444444

foreground = #dfdfdf
foreground-alt = #8f8d8b

primary = #8240f7
secondary = #e60053
alert = #bd2c40

[settings]
screenchange-reload = true
pseudo-transparency = false
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini
;
[bar/main]
;; monitor set in launch script
;monitor = ${env:MONITOR}
bottom = False
width = 98.4%
height = 50
offset-x = 0.8%
offset-y = 10

;; rounded edges
radius = 15

fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 7
line-color = #f00

; border/(transparent-)padding around bar
border-size = 0
;border-color = #00000000
border-color = #ffffffff

padding-left = 0.5
padding-right = 0.5

module-margin-left = 0.5
module-margin-right = 2

; last number (after the ;) sets vertical offset
font-0 = roboto:pixelsize=26;5
font-1 = FontAwesome:pixelsize=26;6
font-2 = NotoSansSymbols:pixelsize=26;2
font-3 = FiraCode:pixelsize=26;5

; bar calculates dpi from screensize if =0
dpi-x = 0
dpi-y = 0

modules-left = workspaces xwindow
modules-center =
;modules-right = cpu memory pamac-checkupdates date
modules-right = cpu memory yay-updates date tray

override-redirect = false

;; mouse scroll switches between workspaces
; NOTE: click-right doesn't work for some reason
;scroll-down = xdotool key alt+Tab
scroll-down = sh ~/.config/polybar/resize.sh -30 1
scroll-up = sh ~/.config/polybar/resize.sh 30 1
double-click-left = rofi -show window -sidebar-mode -no-fixed-num-lines -modi "window,drun"
;click-middle = xdotool key super+ctrl+return
;click-middle = xdotool key alt+space
click-middle = sh ~/.config/polybar/client_menu.sh 0
click-right = sh ~/.config/polybar/grab.sh
double-click-middle = xdotool key super+ctrl+f
click-left = sh ~/.config/polybar/slop_resize.sh 8 "1,1,1,0.5"

cursor-click = pointer
cursor-scroll = ns-resize

[module/workspaces]
type = internal/xworkspaces
pin-workspaces = false
enable-click = true
enable-scroll = true
format-padding = 1
icon-0 = 1;➀
icon-1 = 2;➁
icon-2 = 3;➂
icon-3 = 4;➃
;;icon-4 = SYS;4 ;;
icon-default =
format = <label-state>

;label-active = %icon% %name%
;label-occupied = %icon% %name%
;label-urgent = %icon% %name%
;label-empty = %name%
;label-active = %{T3}%icon%%{T-}
;label-occupied = %icon%
;label-urgent = %icon%
;label-empty = %icon%
label-active = %{T4}%name%%{T-}
label-occupied = %{T4}%name%%{T-}
label-urgent = %{T4}%name%%{T-}
label-empty =  %{T4}%name%%{T-}

label-occupied-padding = 2
label-empty-padding = 2
label-urgent-padding = 2
label-active-padding = 2
label-active-foreground = ${colors.foreground}
label-active-underline = ${colors.primary}
label-occupied-underline = ${colors.secondary}
label-urgent-foreground = ${colors.alert}
label-urgent-underline = ${colors.alert}
label-empty-foreground = ${colors.foreground}

