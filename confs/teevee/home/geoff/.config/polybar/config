[module/yay-updates]
type = custom/script
exec = expr $(checkupdates 2> /dev/null | wc -l) + $(yay -Qum 2> /dev/null | wc -l)
interval = 3600
label = %output%
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix = "  "
double-click-left = kitty yay -Syyu


